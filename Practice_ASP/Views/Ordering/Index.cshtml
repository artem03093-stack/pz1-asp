@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Practice_ASP.Data.Models.Ordering;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Оформлення заказу</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Интернет магазин побутової техніки</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index", "Category")">Каталог</a>
                </li>
            </ul>
            <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-primary ml-2">Кошик</a>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>Оформлення заказу</h1>

        <form method="post" action="/Ordering/Checkout">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputFirstName">Ім'я</label>
                    <input type="text" class="form-control" id="inputFirstName" placeholder="Введіть ім'я" name="Name" value="@Model?.Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputLastName">Прізвище</label>
                    <input type="text" class="form-control" id="inputLastName" placeholder="Введіть прізвище" name="Lastname" value="@Model?.Lastname">
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress">Адреса</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="Введіть адресу" name="Address" value="@Model?.Address">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputPhoneNumber">Номер телефону</label>
                    <input type="tel" class="form-control" id="inputPhoneNumber" placeholder="+38050..." name="Mobile" value="@Model?.Mobile">
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputEmail">Електронна пошта</label>
                    <input type="email" class="form-control" id="inputEmail" placeholder="aspnet@gmail.com" name="Email" value="@Model?.Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Оформити замовлення</button>
        </form>
    </div>

    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>